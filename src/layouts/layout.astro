---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

import {SITE_TITLE, SITE_DESCRIPTION } from "../constants.ts";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={SITE_DESCRIPTION} />
		<meta name="generator" content={Astro.generator} />
		<title>{SITE_TITLE}</title>
	</head>
	<body class="min-h-screen">
		<Header />
			<main>
				<slot />
			</main>
		<Footer />
	</body>
</html>

<style is:global>
	.cust-container {
        @apply w-full sm:max-w-[540px] md:max-w-[720px] lg:max-w-[960px] xl:max-w-[1140px] 2xl:max-w-[1320px]  mx-auto px-4;
    }

	.beforeContent::before {
        content: "";
        background-color: black;
        position: absolute;
        inset: 0;
        opacity: 0.8;
        color: #313131;
    }

	.hero-main-div {
		@apply relative w-full min-h-[55vh] bg-center bg-cover before:absolute before:inset-0 before:bg-black before:bg-opacity-70 flex justify-center items-center
	}
</style>